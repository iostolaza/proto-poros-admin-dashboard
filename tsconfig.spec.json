// tsconfig.spec.json (updated for Jasmine types)
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine",  // Added: Types for Jasmine globals (describe, it, expect, etc.)
      "node"
    ]
  },
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
